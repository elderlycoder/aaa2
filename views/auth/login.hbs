<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Вход</a></li>
        <li class="tab col s6"><a class="active" href="#register">Регистрация</a></li>
       </ul>
    <div id="login" class="col s6 offset-s3">
       <h2>Вход на сайт</h2>
     <form action="/auth/login" method="POST">
      <div class="input-field">
          <label for"email">Email: </label>  
          <input type="email" id="email" name="email" class="validate" required></li> 
          <span class="helper-text" data-error="Введите email"></span>
      </div>
      <div class="input-field">
          <label for"pass">Пароль: </label>  
          <input type="password" id="pass" name="pass" class="validate" required></li> 
          <span class="helper-text" data-error="Введите пароль"></span>
      </div>
      <button class="btn btn-primary" type="submit">Войти</button>
     </form>
    </div>
    <div id="register" class="col s6 offset-s3">
       <h2>Создать аккаунт</h2>
      <form action="/auth/register" method="POST">
      <div class="input-field">
          <label for"remail">Email: </label>  
          <input type="email" id="remail" name="email" class="validate" required></li> 
          <span class="helper-text" data-error="Введите email"></span>
      </div>
      <div class="input-field">
          <label for"rpass">Пароль: </label>  
          <input type="password" id="rpass" name="pass" class="validate" required></li> 
          <span class="helper-text" data-error="Введите пароль"></span>
      </div>
      <div class="input-field">
       
          <input type="password" id="confirm" name="confirm" class="validate" required></li> 
          <label for"confirm">Пароль: </label>  
          <span class="helper-text" data-error="Повторите пароль"></span>
      </div>
      <button class="btn btn-primary" type="submit">Зарегистрироваться</button>
     </form>
    </div>
  </div>
</div>
        